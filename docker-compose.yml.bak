version: "3.3"
services:
  client:
    build:
      context: ./packages/client
      args:
        BASENAME: /
        JWT_STORAGE_KEY: access_token
    image: client
    container_name: nginx
    ports:
      - 8080:80
    volumes:
      - ./packages/nginx/nginx.conf:/etc/nginx/nginx.conf:ro
    depends_on:
      - api
      - server
    networks:
      - frontend
  api:
    build: ./packages/api
    image: api
    container_name: node
    ports:
      - 8081:8080
    environment:
      PORT: 8080
      MONGO_HOST: mongo
      MONGO_PORT: 27017
      MONGO_DB: subspace
      JWT_SECRET: rubyoureyes
      JWT_EXPIRE_SECONDS: 3600
    depends_on:
      - mongo
    networks:
      - frontend
      - backend
  server:
    build: ./packages/server
    image: server
    container_name: server
    ports:
      - 8083:8083
    depends_on:
      - redis
    networks:
      - backend
      - frontend
  redis:
    image: redis
    container_name: redis
    ports:
      - 6379:6379
    volumes:
      - data_redis:/data/redis
    networks:
      - backend
  mongo:
    image: mongo
    container_name: mongo
    ports:
      - 27017:27017
    volumes:
      - data_mongo:/data/db
    networks:
      - backend
  mongo-express:
    image: mongo-express
    container_name: mongo-express
    ports:
      - 8082:8081
    depends_on:
      - mongo
    networks:
      - backend
      - tools
  portainer:
    image: portainer/portainer
    container_name: portainer
    command: --no-auth
    ports:
      - 9000:9000
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - data_portainer:/data
    networks:
      - tools
volumes:
  data_mongo:
  data_redis:
  data_portainer:
networks:
  frontend:
  backend:
  tools:

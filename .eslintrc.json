{
  "root": true,
  "parser": "babel-eslint",
  "extends": "airbnb",
  "plugins": [
      "flowtype"
  ],
  "env": {
      "browser": true,
      "node": true
  },
  "rules": {
      "flowtype/define-flow-type": 1,
      "flowtype/use-flow-type": 1,
      "function-paren-newline": 0,
      "indent": ["error", 4],
      "react/jsx-indent": 4,
      "react/jsx-indent-props": 4,
      "react/no-unused-prop-types": 0
  },
  "overrides": [
      {
          "files": ["**/*.spec.{js,jsx}", "jest/**/*.js"],
          "env": {
              "jest": true
          },
          "rules": {
              "import/no-extraneous-dependencies": 0
          }
      },
      {
          "files": ["**/*.stories.{js,jsx}"],
          "rules": {
              "import/no-extraneous-dependencies": 0
          }
      },
      {
          "files": ["webpack/**/*.js"],
          "rules": {
              "import/no-extraneous-dependencies": 0
          }
      }
  ]
}
